<!DOCTYPE HTML>
<html lang='ru'>
  <head prefix='og: http://ogp.me/ns#'>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <meta name='google-site-verification' content='4WezRNvvwZCOYCxFNt9PKHdon29hbt-V7bMbhZhaMMk' />
    <meta name="yandex-verification" content="80e6d145655b9add" />
    <meta name="rpfe26e092c7954d7c8a1551ff5169c34f" content="46d58b82e71fe375debceed79ad42b29" />
    <meta name="telderi" content="1156e2e003884d92a87854c6341fe885" />
    <meta property='fb:app_id' content='131807160304776'/>
    <%= yield(:disallowed_content) %>

    <% if Settings['app.city'] == 'tomsk' %>
      <meta name="verify-admitad" content="180a025388" />
    <% end %>

    <!-- fb0efcfc2fdc4ac1 -->
    <%= yield(:verify_reformal) %>

    <% if page_meta %>
      <title><%= page_meta_item('title') %></title>
    <% elsif content_for?(:page_title) %>
      <title><%= yield(:page_title).squish.html_safe %></title>
    <% else %>
      <title><%= I18n.t("meta.#{Settings['app.city']}.default.title", :default => '').squish.html_safe %></title>
    <% end %>

    <% if page_meta %>
      <meta name='keywords' content='<%= page_meta_item('keywords') %>' />
    <% elsif content_for?(:meta_keywords) %>
      <meta name='keywords' content='<%= yield(:meta_keywords) %>' />
    <% else %>
      <meta name='keywords' content='<%= I18n.t("meta.#{Settings['app.city']}.default.keywords", :default => '').squish.html_safe %>' />
    <% end %>

    <% if page_meta %>
      <meta name='description' content='<%= page_meta_item('description') %>' />
    <% elsif content_for?(:meta_description) %>
      <meta name='description' content='<%= yield(:meta_description) %>' />
    <% else %>
      <meta name='description' content='<%= I18n.t("meta.#{Settings['app.city']}.default.description", :default => '').squish.html_safe %>' />
    <% end %>
    <% if content_for?(:meta_title) %>
      <meta name='title' content='<%= yield(:meta_title) %>' />
    <% end %>

    <%= yield(:canonical_link) %>
    <%= yield(:extra_meta) %>
    <%= favicon_link_tag %>
    <%= yield(:stylesheets) %>
    <%= yield(:javascripts) %>
    <%= yield(:extra_javascripts) %>
    <%= csrf_meta_tags %>
    <%= yield(:metrics) %>
  </head>
  <body class='<%= Settings['app']['city'].downcase %> <%= controller_name %>-with-adaptive-version'>
    <%= yield(:flash_messages) %>
    <%= yield(:content) %>
  </body>
</html>
