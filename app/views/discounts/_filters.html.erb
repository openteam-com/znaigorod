<div class="grayline-navigation gray-navigation-discounts hidden-sm hidden-xs">
  <div class="filters discount">
    <div class="by_kind">
      <ul>
        <% @presenter.kind_filter.links.take(8).each do |link| %>
          <li class="<%= link.klass %>">
            <%= link_to link.path do %>
              <span class="name"><%= link.title %></span>
            <% end %>
          </li>
        <% end %>
        <% if @presenter.kind_filter.links.count > 8 %>
          <li class="more_link <%= 'selected' if @presenter.kind_filter.more? %>">
            <a href='#'>&darr; Ещё скидки</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class='filters_for_mobile_discounts visible-xs visible-sm'>
  <div class='mobile-version-filters'>
    <p> Категория: </p>
      <select onchange='location = this.value'>
        <% @presenter.kind_filter.links.each do |link| %>

          <option class='<%= link.klass %>'
                  value="<%= link.path %>"
                  <%= 'selected' if link[:klass].include?("selected") %>>
              <%= link[:title] %>
          </option>
        <% end %>
    </select>
  </div>
</div>

<div class="mobile-filters-discounts visible-xs">
  <div class="by_type">
    <span> Тип: </span>
      <select onchange='location = this.value'>
        <% @presenter.type_filter.links.each do |link| %>
          <option class='<%= link.klass %>'
                  value="<%= link.path %>"
                  <%= 'selected' if link[:klass].include?("selected") %>>
              <%= link[:title] %>
          </option>
        <% end %>
    </select>
  </div>

  <div class='presentation-filters-wrapper'>
    <!--noindex-->
    <span class='label'>Сортировать по:</span>
    <select onchange="location = this.value">
      <% @presenter.order_by_filter.links.each do |link| %>
        <option class="<%= link.klass %>" value="<%= link.path %>" <%= request.fullpath == link.path ? 'selected' : '' %>>
          <%= link.title %>
        </option>
      <% end %>
    </select>
    <!--/noindex-->
  </div>
</div>

<div class='filters-by-wrapper filters-for-discounts flexible hidden-xs'>
  <div class="filters discount">
    <div class="by_type">
      <ul class='clean-filters-list'>
        <li>Тип: </li>
        <% @presenter.type_filter.links.each do |link| %>
          <li class="<%= link.klass %>">
            <%= link_to link.title, link.path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <% if @presenter.kind_filter.links.count > 8 %>
    <span class='filters_wrapper'>
      <ul class="more">
        <% @presenter.kind_filter.links[8..@presenter.kind_filter.links.count].each do |link| %>
          <li class="<%= link.klass %>">
            <%= link_to link.path do %>
              <span class="name"><%= link.title %></span>
              <span class="count"><%= link.results_count %></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </span>
  <% end %>

  <div class='presentation-filters-wrapper'>
    <!--noindex-->
    <span class='label'>Сортировать по:</span>
    <select onchange="location = this.value">
      <% @presenter.order_by_filter.links.each do |link| %>
        <option class="<%= link.klass %>" value="<%= link.path %>" <%= request.fullpath == link.path ? 'selected' : '' %>>
          <%= link.title %>
        </option>
      <% end %>
    </select>
    <!--/noindex-->
  </div>
</div>
